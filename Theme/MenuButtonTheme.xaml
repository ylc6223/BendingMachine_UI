<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Style BasedOn="{StaticResource {x:Type ToggleButton}}" TargetType="{x:Type RadioButton}" x:Key="MenuButtonTheme">
        <Style.Setters>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="RadioButton">
                        <Border BorderBrush="Black" BorderThickness="1" Margin="10,0,10,0">
                            <StackPanel Orientation="Horizontal" Margin="20,0">
                                <TextBlock Text="{TemplateBinding Tag}" FontSize="26" FontFamily="/Icon/#iconfont"></TextBlock>
                                <TextBlock Text="{TemplateBinding Property=Content}" VerticalAlignment="Center" FontFamily="/Fonts/#NotoSansSC-Regular"></TextBlock>
                            </StackPanel>
                        </Border>
                        <!--<Grid VerticalAlignment="Stretch" HorizontalAlignment="Stretch" Margin="{TemplateBinding Margin}"  Background="{TemplateBinding Background}">
                                <TextBlock Text="{TemplateBinding Property=Content}" VerticalAlignment="Center" FontFamily="/Fonts/#NotoSansSC-Regular"></TextBlock>-->
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style.Setters>
    </Style>
</ResourceDictionary>